rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection - main user profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // UserData collection - financial data
    match /userData/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Credit Cards subcollection
    match /users/{userId}/creditCards/{cardId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && 
                      request.resource.data.last4.matches('^[0-9]{4}$') &&
                      !('pan' in request.resource.data) &&
                      !('PAN' in request.resource.data) &&
                      !('cardNumber' in request.resource.data) &&
                      !('cvv' in request.resource.data) &&
                      !('CVV' in request.resource.data);
      allow update: if isOwner(userId) && 
                      request.resource.data.last4.matches('^[0-9]{4}$') &&
                      !('pan' in request.resource.data) &&
                      !('PAN' in request.resource.data) &&
                      !('cardNumber' in request.resource.data) &&
                      !('cvv' in request.resource.data) &&
                      !('CVV' in request.resource.data);
      allow delete: if isOwner(userId);
    }
    
    // Credit Transactions subcollection
    match /users/{userId}/creditTransactions/{txId} {
      allow read, write: if isOwner(userId);
    }
    
    // Credit Payments subcollection
    match /users/{userId}/creditPayments/{paymentId} {
      allow read, write: if isOwner(userId);
    }
    
    // Credit Statements subcollection
    match /users/{userId}/creditStatements/{statementId} {
      allow read, write: if isOwner(userId);
    }
  }
}